@using System.Text.Json
@using Website.Models;
@model Tuple<List<PlanetModel>, string>

@{
    ViewData["Title"] = "Home Page";
}

<script src="/js/app.js" @*translation_text="@JsonSerializer.Serialize(Model.Item2)"*@ planets_text="@JsonSerializer.Serialize(Model.Item1)" defer></script>

<article>
    <section>
        <h2 data-translation="1">Our solar system</h2>
        <img src="/assets/img/solar_system.png" alt="Our solar system" title="Our solar system" />
        <p>Our solar system is very large, and unique, but ofcourse there are others out there</p>
    </section>

    <section>
        <h3 data-translation="2">Did you know?</h3>
        <p>there are only things in our solar system that you can’t even guess</p>
    </section>
</article>

<article>
    <section>
        <img src="/assets/img/earthImpact.jpg" alt="Earth Impact" title="Esarth Impact" />
    </section>

    <section>
        <h3 data-translation="3">History of the Earth</h3>
        <p>Learn the history of a remarkable planet. This is nothing like what we found in the universe.</p>
    </section>
</article>

<article>
    <img src="/assets/img/lunar.jpg" alt="Lunar" title="Lunar" />
</article>

<article id="game">
    <div id="information-modal" class="modal">
        <section class="header">
            <h3>
                <span></span>
                <img class="rotating slow icon" src="">
            </h3>
            <button id="information-modal-close-btn" title="Close" type="button">×</button>
        </section>

        <section class="content">                <!-- Content here -->
                <p class="fact">Text goes here</p>

                <span class="inline btn-group">
                    <button class="prev-btn" type="button" title="Show previous fact">&lt;</button>
                    <button class="next-btn" type="button" title="Show next fact">&gt;</button>
                </span>
        </section>
    </div>

    <article>
        <section id="game-question" class="hidden">
            <h3>Which planet do we live on?</h3>
        </section>

        <section>
            <img src="/assets/img/planet/sun.png" alt="Sun" title="You can't go here" />
            <img src="/assets/img/planet/mercury.png" alt="Mercury" title="Go to mercury" data-index="0" data-click="moveToMercury" />
            <img src="/assets/img/planet/venus.png" alt="Venus" title="Go to venus" data-index="1" data-click="moveToVenus" />
            <img src="/assets/img/planet/earth.png" alt="Earth" title="Go to earth" data-index="2" data-click="moveToEarth" />
            <img src="/assets/img/planet/mars.png" alt="Mars" title="Go to mars" data-index="3" data-click="moveToMars" />
            <img src="/assets/img/planet/jupiter.png" alt="Jupiter" title="Go to jupiter" data-index="4" data-click="moveToJupiter" />
            <img src="/assets/img/planet/saturn.png" alt="Saturn" title="Go to saturn" data-index="5" data-click="moveToSaturn" />
            <img src="/assets/img/planet/uranus.png" alt="Uranus" title="Go to uranus" data-index="6" data-click="moveToUranus" />
            <img src="/assets/img/planet/neptune.png" alt="Neptune" title="Go to neptune" data-index="7" data-click="moveToNeptune" />
            <img src="/assets/img/planet/pluto.png" alt="Pluto" title="Go to pluto" data-index="8" data-click="moveToPluto" />
        </section>

        <button type="button" class="start-btn">Start game</button>

        <section class="answer-grid hidden">
                <button class="overflow-dots" type="button">Mercury</button>
                <button class="overflow-dots" type="button">Venus</button>
                <button class="overflow-dots" type="button">Earth</button>
                <button class="overflow-dots" type="button">Mars</button>
                <button class="overflow-dots" type="button">Jupiter</button>
                <button class="overflow-dots" type="button">Saturn</button>
                <button class="overflow-dots" type="button">Uranus</button>
                <button class="overflow-dots" type="button">Neptune</button>
                <button class="overflow-dots" type="button">Pluto</button>
        </section>
    </article>

</article>